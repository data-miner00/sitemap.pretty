{
  "name": "sitemap.pretty",
  "version": "0.2.0",
  "description": "Styles for sitemap.xml",
  "scripts": {
    "build": "npm run build:css && grunt",
    "dev": "grunt dev",
    "test": "node --test",
    "cloc": "cloc . --vcs=git --exclude-list-file=package-lock.json",
    "watch:css": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --watch",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.min.css --minify"
  },
  "keywords": [
    "grunt",
    "sitemap",
    "xsl",
    "xml",
    "tailwindcss"
  ],
  "author": "Shaun Chong <pkay_@live.com>",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@types/grunt": "^0.4.32",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-connect": "^5.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-jshint": "^3.2.0",
    "grunt-contrib-nodeunit": "^5.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-string-replace": "^1.3.3",
    "minify-xml": "^4.5.2",
    "tailwindcss": "^4.0.0"
  }
}
